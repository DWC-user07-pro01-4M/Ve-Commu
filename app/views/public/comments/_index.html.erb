<% if comments.present? %>
  <p>コメント件数：<%= comments.count %></p>
    <table>
      <tbody>
        <% comments.each do |comment| %>
          <tr class="row mt-5 my-5 ml-3">
            <td><%= comment.end_user.nickname %></td>
            <td><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></td>
            <td>
              <% if comment.end_user == current_end_user %>
                <%= link_to "削除", post_comment_path(comment.post,comment), class: "btn btn-danger btn-lg", method: :delete, remote: true, data: {confirm: "本当に削除しますか？", turbolinks: false} %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %>
  <p>コメントはまだありません</p>
<% end %>
