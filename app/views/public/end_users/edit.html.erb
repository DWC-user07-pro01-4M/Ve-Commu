<div class="container-field align-items-center">
  <div class="row d-flex justify-content-center m-5">
    <div class="col-7">
      <div class="border border-white contents-area bg-white">

        <%= render "error", end_user: @end_user %>

        <div class="text-center">
            <h3><strong><%= flash[:notice] %><%= flash[:alert] %></strong></h3>
            <h3><strong class="border-bottom border-dark"><%= @end_user.nickname %>様の会員情報編集</strong></h3>
        </div>

          <div class="m-5">
            <%= form_with model: @end_user do |f| %>

              <div class="row mb-5 field">
                <div class="col-3 offset-md-1"><%= f.label "ニックネーム" %></div>
                <div class="col-3"><%= f.text_field :nickname, :size => "50" %></div>
              </div>

              <div class="row mb-5 field">
                <div class="col-3 offset-md-1"><%= f.label "メールアドレス" %></div>
                <div class="col-3"><%= f.email_field :email, :size => "50" %></div>
              </div>

              <div class="row justify-content-center mb-3">
                <div class="col-2 ml-5">
                  <%= f.submit "編集内容を保存", class: "btn btn-success btn_lg" %>
                </div>
                <div class="col-2 col-offset-1">
                  <%= link_to "退会する", unsubscribe_end_users_path, class: "btn btn-danger btn_lg" %>
                </div>
              </div>

            <% end %>
          </div>

      </div>
    </div>
  </div>
</div>