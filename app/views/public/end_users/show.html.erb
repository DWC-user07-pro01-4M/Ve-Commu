<div class="container bg-light">

  <div class="text-center mt-5"><h3><strong><%= flash[:notice] %></strong></h3></div>

  <h3 class="ml-5 mt-4 mb-5"><span class="border-bottom border-dark">マイページ</span></h3>

  <table class="table table-bordered contents-area mb-5">
    <tbody>
      <tr>
        <th scope="row", class="table-light col-3 text-left">ニックネーム</th>
        <td><%= @end_user.nickname %></td>
      </tr>
      <tr>
        <th scope="row", class="table-light col-3 text-left">メールアドレス</th>
        <td><%= @end_user.email %></td>
      </tr>
    </tbody>
  </table>


  <% if @end_user.nickname != "guestuser" %>
    <div class="text-center">
      <%= link_to "編集する", edit_end_user_path, class: "btn btn-success" %>
    </div>
  <% end %>

  <div class="text-center">
    <%= link_to "お気に入りを見る", bookmark_end_user_path, class: "btn btn-success" %>
  </div>

</div>