<div class="container-field">

  <div class="text-center mt-5"><h3><strong><%= flash[:notice] %></strong></h3></div>

    <div class="row d-flex justify-content-center m-5">
      <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
        <div class="border border-success contents-area bg-light">

          <div class="bg-success p-2 text-light text-center">
            <h1>新規登録</h1>
          </div>

          <div class="m-5">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
            <div class="d-flex justify-content-start mb-5">
              <%= f.label :ニックネーム, class: "w-25" %>
              <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "w-50", placeholder: "10文字以内でニックネームを入力してください" %>
            </div>

            <div class="d-flex justify-content-start mb-5">
              <%= f.label :メールアドレス, class: "w-25" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-50", placeholder: "メールアドレスを入力してください" %>
            </div>

            <div class="d-flex justify-content-start mb-5">
              <%= f.label :パスワード, class: "w-25" %>
              <% if @minimum_password_length %>

              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "w-50", placeholder: "＊＊＊＊＊＊＊＊＊＊" %>
            </div>
            <div class="d-flex justify-content-start text-block mb-5">
              <%= f.label :確認用パスワード, class: "w-25" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-50", placeholder: "＊＊＊＊＊＊＊＊＊＊" %>
            </div>

            <div class="actions text-center">
              <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
            </div>

            <br>

            <div class="row mb-3">
              <div class="col-12 text-center">
                <h4 class="">既に登録済みの方</h4>
                <%= link_to "こちら", new_end_user_session_path %>　からログインしてください。
              </div>
            </div>
            <% end %>
          </div>

        </div>
      </div>
    </div>

</div>