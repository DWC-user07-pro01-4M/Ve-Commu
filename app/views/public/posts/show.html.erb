<div class="container my-5 bg-light">

  <div class="row mt-5 md-5">
    <div class="col-md-10 mx-auto">
      <%= render "error", post: @post %>
      <div class="text-center mt-5"><h3><strong><%= flash[:notice] %></strong></h3></div>
      <div class="text-center mt-5"><h3><strong><%= flash[:alert] %></strong></h3></div>
    </div>
  </div>

  <div class="row mt-5">

    <div class="col-md-5">
      <div class="mx-5 mb-5 ">
        <%= image_tag @post.get_image(300,300) %>
      </div>
    </div>

    <div class="col-md-7" style="text-left">

      <h3><span class="border-bottom border-dark">投稿情報詳細</span></h3>

      <table class="table table-borderless">
        <tbody>

          <tr>
            <th>
              <% if current_end_user != @post.end_user %>
                <div class="bookmark">
                  <% if @post.bookmark_by(current_end_user).blank? %>
                    <%= link_to "お気に入りに登録する", post_bookmarks_path(@post), method: :post, class: "btn btn-success btn-lg" %>
                  <% else %>
                    <%= link_to "お気に入りからはずす", post_bookmark_path(@post,@post.bookmark_by(current_end_user)), method: :delete, class: "btn btn-outline-success btn-lg" %>
                  <% end %>
                </div>
              <% end %>
            </th>
          </tr>

          <tr>
            <th style="width: 30%">投稿者 </th>
            <td style="width: 70%"><%= @post.end_user.nickname %></td>
          </tr>

          <tr>
            <th style="width: 30%">施設名</th>
            <td style="width: 70%"><%= @post.facility_name %></td>
          </tr>
          <tr>
            <th style="width: 30%">施設住所</th>
            <td style="width: 70%"><%= @post.address %></td>
          </tr>
          <tr>
            <th style="width: 30%">詳細説明</th>
            <td style="width: 70%"><%= @post.detailed_description %></td>
          </tr>

          <% @post.tags.each do |tag| %>
            <tr>
              <th style="width: 30%">タグ</th>
              <td style="width: 70%"><%= tag.tag_type %></td>
            </tr>
          <% end %>

        </tbody>
      </table>

      <div class="my-5 ml-3">
        <% if @post.end_user == current_end_user %>
          <%= link_to "編集する", edit_post_path(@post.id), class: "btn btn-warning btn-lg" %>
          <%= link_to "削除する", post_path(@post.id), class: "btn btn-danger btn_lg", method: :delete, "data-confirm" => "本当に投稿を削除してよろしいですか?" %>
        <% end %>
      </div>

      <table>
        <tbody>
            <tr>
              <td>
                <div id = "comment_area">
                  <%= render "public/comments/form", comment: @comment %>
                </div>
              </td>
            </tr>

              <div>
                <%= render "public/comments/index", comments: @comments, post: @post %>
              </div>
        </tbody>
      </table>

    </div>

  </div>
</div>