<div class="container my-5 bg-light">
  <div class="row mt-4 md-2">
    <div class="col-md-10 mx-auto">
      <div class="text-center mt-5"><h3><strong><%= flash[:notice] %></strong></h3></div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-md-5">
      <div class="mx-5 mb-5 ">
        <%= image_tag @post.get_image(300,300) %>
      </div>
    </div>
    <div class="col-md-7" style="text-left">
      <h3><span class="border-bottom border-dark">投稿情報詳細</span></h3>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th style="width: 30%">施設名</th>
            <td style="width: 70%"><%= @post.facility_name %></td>
          </tr>
          <tr>
            <th style="width: 30%">施設住所</th>
            <td style="width: 70%"><%= @post.address %></td>
          </tr>
          <tr>
            <th style="width: 30%">詳細説明</th>
            <td style="width: 70%"><%= @post.detailed_description %></td>
          </tr>

        </tbody>
      </table>
      <div class="my-5 ml-3">
        <%= link_to "編集する", edit_post_path(@post.id), class: "btn btn-lg btn-success" %>
        <%= link_to "新しく投稿する", new_post_path, class: "btn btn-lg btn-primary" %>
      </div>

      <% @comments.each do |comment| %>
        <p><%= comment.comment %></p>
          <% if comment.end_user == current_end_user %>
          <p><%= link_to  "Destroy", post_comment_path(comment.post_id, comment.id), method: :delete, remote: true %></p>
        <% end %>
        <% end %>

<div class="form-group row">
  <%= form_with(model: [@post, @comment]) do |f| %>
    <%= f.label :comment,"コメント", class:"form-label" %>
    <%= f.text_area :comment %>
    <%= button_tag type: "submit", class: "btn btn-default" do %>
      <i class="far fa-comment-alt"></i>
    <% end %>
<% end %>

    </div>
  </div>
</div>