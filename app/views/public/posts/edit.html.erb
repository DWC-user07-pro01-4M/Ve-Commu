<div class="container">
  <div class="row mt4- md-2">
    <div class="col-md-6 mx-auto">
      <%= form_with url: public_post_path do |f| %>
  <div class="form-group">
    <%= f.label :施設画像 %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :施設名 %>
    <%= f.text_field :facility_name, class: "form-control", :placeholder => "施設名" %>
  </div>
  <div class="form-group">
    <%= f.label :施設住所 %>
    <%= f.text_field :address, class: "form-control", :placeholder => "施設住所" %>
  </div>
  <div class="form-group">
    <%= f.label :詳細説明 %>
    <%= f.text_area :detailed_description, class: "form-control", :placeholder => "詳細を記入してください" %>
  </div>
  <div class="form-group">
      <%= f.submit "情報を更新する", class: "btn btn-success" %>
  </div>
<% end %>
      <%= link_to "前のページへ戻る", public_post_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>