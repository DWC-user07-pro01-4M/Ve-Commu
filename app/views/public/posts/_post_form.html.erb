<%= form_with model:post, url: public_posts_path, local:true do |f| %>
  <div class="form-group">
    <%= f.label :施設画像 %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.label :施設名 %>
    <%= f.text_field :facility_name, class: "form-control", :placeholder => "施設名" %>
  </div>
  <div class="form-group">
    <%= f.label :施設住所 %>
    <%= f.text_field :address, class: "form-control", :placeholder => "施設住所" %>
  </div>
  <div class="form-group">
    <%= f.label :詳細説明 %>
    <%= f.text_area :detailed_description, class: "form-control", :placeholder => "詳細を記入してください" %>
  </div>
  <div class="form-group">
    <% if f.object.new_record? %>
      <%= f.submit "情報をシェアする", class: "btn btn-primary" %>
    <% else %>
      <%= f.submit "情報を更新する", class: "btn btn-success" %>
    <% end %>
  </div>
<% end %>