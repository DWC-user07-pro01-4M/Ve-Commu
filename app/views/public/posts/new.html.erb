<div class="container">
  <div class="row mt-4 md-2">
    <div class="col-md-6 mx-auto">
      <%= flash[:notice] %>
      <h1><span class="border-bottom border-dark">新規投稿</span></h1>

        <%= form_with model: @post, url: public_posts_path, method: :post do |f| %>
          <div class="form-group">
            <%= f.label :施設画像 %>
            <%= f.file_field :image, accept: "image/*" %>
          </div>
          <div class="form-group">
            <%= f.label :施設名 %>
            <%= f.text_field :facility_name, class: "form-control", :placeholder => "施設名" %>
          </div>
          <div class="form-group">
            <%= f.label :施設住所 %>
            <%= f.text_field :address, class: "form-control", :placeholder => "施設住所" %>
          </div>
          <div class="form-group">
            <%= f.label :詳細説明 %>
            <%= f.text_area :detailed_description, class: "form-control", :placeholder => "詳細を記入してください" %>
          </div>
          <div class="form-group">
            <%= f.submit "情報をシェアする", class: "btn btn-success" %>
          </div>
        <% end %>

    </div>
  </div>
</div>