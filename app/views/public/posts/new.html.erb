<div class="container-field align-items-center">
  <div class="row d-flex justify-content-center m-5">
    <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12">
      <div class="border border-success contents-area bg-white">

          <div class="bg-success text-light text-center">
            <h3><strong>新規投稿</strong></h3>
          </div>
            <%= render "error", post: @post %>
          <div class="text-center">
            <h3><strong><%= flash[:notice] %><%= flash[:alert] %></strong></h3>
          </div>

            <%= form_with model: @post, url: posts_path, local:true do |f| %>
              <div class="form-group m-5">
                <%= f.label :施設画像 %>
                <%= f.file_field :image, accept: "image/*" %>
              </div>
              <div class="form-group m-5">
                <%= f.label :施設名 %><%= f.label :※入力必須, class: "text-danger" %>
                <%= f.text_field :facility_name, class: "form-control", :placeholder => "施設名" %>
              </div>
              <div class="form-group m-5">
                <%= f.label :施設住所 %><%= f.label :※入力必須, class: "text-danger" %>
                <%= f.text_field :address, class: "form-control", :placeholder => "施設住所" %>
              </div>
              <div class="form-group m-5">
                <%= f.label :詳細説明 %><%= f.label :※入力必須, class: "text-danger" %>
                <%= f.text_area :detailed_description, class: "form-control", :placeholder => "詳細を記入してください" %>
              </div>

              <div class="form-group m-5">タグ</div>
                <div class="row d-flex justify-content-start m-5">
                  <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :tag_type) do |tag| %>
                    <div class="form-check form-check-inline flex flex-wrap">
                      <%= tag.label do %>
                        <%= tag.check_box %>
                        <%= tag.text %>
                      <% end %>
                    </div>
                  <% end %>
                </div>

              <div class="form-group text-center">
                <%= f.submit "情報のシェア", class: "btn btn-success btn_lg" %>
              </div>
            <% end %>

      </div>
    </div>
  </div>
</div>