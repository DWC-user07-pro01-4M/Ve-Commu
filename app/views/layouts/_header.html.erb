<div class="container">
  <nav class="navbar navbar-expand-lg">
    <%= link_to image_tag('logo.png', width: '100', height: '100', class: 'mx-4 my-3'), root_path %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
      </button>
    <div class="collapse navbar-collapse">

      <div class="user-name text-dark center-block">
        <% if end_user_signed_in? %>
          <p class="pt-3">ようこそ、<span class="h5"><strong><%= current_end_user.nickname %></strong></span> 様</p>
        <% elsif admin_signed_in? %>
          <p class="h5 pt-5 pb-5"><strong>管理者ログイン中</strong></p>
        <% else %>
          <p class="pt-3">ようこそ、<span class="h5"><strong>ゲスト</strong></span> 様</p>
        <% end %>
      </div>

        <div class="d-flex flex-column ml-auto">
          <ul class="navbar-nav">
            <% if admin_signed_in? %>
              <li class="nav-link px-2">
                <%= link_to admin_end_users_path, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-user-check"></i> 会員一覧
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to admin_comments_path, class: "text-decoration-none text-dark h5" do %>
                  <i class="fas fa-check-square"></i> コメント一覧
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to admin_tags_path, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-gift"></i> タグ一覧
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to destroy_admin_session_path, method: :delete, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-sign-out-alt"></i>ログアウト
                <% end %>
              </li>

            <% elsif end_user_signed_in? %>
              <li class="nav-link px-2">
                <%= link_to end_user_path(current_end_user), class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-user"></i> マイページ
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to end_users_path, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-birthday-cake"></i> 会員一覧
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to public_posts_path, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-cart-arrow-down"></i> 情報一覧
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to destroy_end_user_session_path, method: :delete, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-sign-out-alt"></i> ログアウト
                <% end %>
              </li>

            <% else %>
              <li class="nav-link px-2">
                <%= link_to about_path, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-heart"></i> Ve-Commuについて
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to new_end_user_registration_path, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-user-plus"></i> 新規登録
                <% end %>
              </li>
              <li class="nav-link px-2">
                <%= link_to end_user_session_path, class: "text-decoration-none text-primary h5" do %>
                  <i class="fas fa-sign-in-alt"></i> ログイン
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
    </div>
  </nav>
</div>